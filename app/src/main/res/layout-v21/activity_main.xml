<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mbuntu"
    tools:context="com.kingswhaletech.signmeup.MainActivity">

    <EditText
        android:id="@+id/editTextEmail"
        android:layout_width="302dp"
        android:layout_height="52dp"
        android:background="?android:attr/colorEdgeEffect"
        android:ems="10"
        android:hint="@string/email_address"
        android:inputType="textEmailAddress"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textColorHint="#ffffff"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="150dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <EditText
        android:id="@+id/editTextPassword"
        android:layout_width="302dp"
        android:layout_height="52dp"
        android:background="?android:attr/colorEdgeEffect"
        android:ems="10"
        android:hint="@string/enter_your_password"
        android:inputType="textPassword"
        android:textColorHint="#ffffff"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/editTextEmail"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/editTextEmail"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/editTextEmail" />
    <Button
        android:background="@drawable/b_background"
        android:textColor="#ffffff"
        android:textSize="15sp"
        android:id="@+id/buttonRegister"
        android:layout_width="302dp"
        android:layout_height="52dp"
        android:text="@string/sign"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/editTextPassword"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/editTextPassword"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/editTextPassword" />

    <TextView
        android:textAlignment="center"
        android:text="@string/if_you_have_not_registered_sign_up_here"
        android:textSize="15sp"
        android:textColor="#ffffff"
        android:id="@+id/textViewSignin"
        android:layout_width="276dp"
        android:layout_height="21dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/buttonRegister"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/buttonRegister"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/buttonRegister"
        app:layout_constraintHorizontal_bias="0.333" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline"
        android:orientation="vertical"
        app:layout_constraintGuide_end="390dp" />

</android.support.constraint.ConstraintLayout>
