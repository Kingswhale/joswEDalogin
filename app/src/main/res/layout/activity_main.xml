<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mbuntu"
    tools:context="com.kingswhaletech.signmeup.MainActivity">

    <EditText
        android:id="@+id/editTextEmail"
        android:layout_width="302dp"
        android:layout_height="52dp"
        android:background="?android:attr/colorEdgeEffect"
        android:ems="10"
        android:hint="@string/email_address"
        android:inputType="textEmailAddress"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textColorHint="#ffffff"
        tools:targetApi="lollipop"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="150dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <EditText
        android:id="@+id/editTextPassword"
        android:layout_width="302dp"
        android:layout_height="52dp"
        android:background="?android:attr/colorEdgeEffect"
        android:ems="10"
        android:hint="@string/enter_your_password"
        android:inputType="textPassword"
        android:textColorHint="#ffffff"
        tools:ignore="NewApi,RtlHardcoded"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/editTextEmail"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/editTextEmail"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/editTextEmail"
        app:layout_constraintHorizontal_bias="1.0" />
    <Button
        android:background="@drawable/b_background"
        android:textColor="#ffffff"
        android:textSize="15sp"
        android:id="@+id/buttonRegister"
        android:layout_width="302dp"
        android:layout_height="52dp"
        android:text="@string/sign"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/editTextPassword"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/editTextPassword"
        tools:ignore="RtlHardcoded"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/editTextPassword"
        app:layout_constraintHorizontal_bias="0.0" />
    <TextView
        android:textAlignment="center"
        android:text="@string/if_you_have_not_registered_sign_up_here"
        android:textSize="15sp"
        android:textColor="#ffffff"
        android:id="@+id/textViewSignin"
        android:layout_width="306dp"
        android:layout_height="19dp"
        android:layout_marginTop="17dp"
        app:layout_constraintTop_toBottomOf="@+id/buttonRegister"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/buttonRegister"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/buttonRegister"
        tools:ignore="RtlHardcoded"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.442" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline"
        app:layout_constraintGuide_begin="20dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="20dp" />

</android.support.constraint.ConstraintLayout>
